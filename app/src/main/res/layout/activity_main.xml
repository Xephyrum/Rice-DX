<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs.adamson.ricedx.MainActivity"
    android:background="@drawable/bgricedx"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lblInternet"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="275dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:src="@drawable/logoricedx"
        android:layout_above="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_marginBottom="41dp"
        android:layout_marginRight="0dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnExit"
        android:background="@android:color/transparent"
        android:layout_above="@+id/lblInternet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/btnexit"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnActivate"
        android:background="@android:color/transparent"
        android:src="@drawable/btnestimate"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/btnExit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/btnActivate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:src="@drawable/btnanalyze"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

</RelativeLayout>
